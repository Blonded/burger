<div class="container">
<header align="center">
  <h1>Burgers!</h1>
  <h4> This calls for a cheeseburger... </h4>
</header>
<hr>

<form class="create-form" align="center">
  <h2>Add Order</h2>
  <div class="form-group">
    <label for="newOrder">Burger Name:</label>
    <input type="text" id="newOrder" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Hungry?</label><br>
    {{!-- devoured true --}}
    <input type="radio" name="hungry" value="1"> eat now!<br>
  {{!-- deboured false --}}
    <input type="radio" name="hungry" value="0"> wait to eat
  </div>

  <button id="create-burger">Add Order</button>
</form>
<hr>
<div class="row">
<div class="col-md-6 col-lg-6 col-sm-12">
<ul id="to-eat">
<h2> hungry?</h2>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<hr>
<div class="col-md-6 col-lg-6 col-sm-12">
<ul id="already-ate">
 <h2> Past Burgers! </h2>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>


